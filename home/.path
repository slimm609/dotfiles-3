# Add Homebrew's bin folder to path
PATH="$PATH:/usr/local/bin"

# Add node path
PATH="$HOME/.node/bin:$PATH"

# Add composer bin folder to path
PATH="$HOME/.composer/vendor/bin:$PATH"

# Add coreutils 
PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

# Add .local bin folder
PATH="$HOME/.local/bin:$PATH"

# Add android tools to path
PATH="$HOME/Library/Android/sdk/tools:$PATH"
PATH="$HOME/Library/Android/sdk/platform-tools:$PATH"
PATH="$HOME/Library/Android/sdk/emulator:$PATH"

# Add Go bin folder to path
PATH="$GOPATH/bin:$PATH"

# Add ~/bin folder to path
PATH="$PATH:$HOME/bin"

# Add Python's users bin folder to path
PATH="$PATH:$HOME/Library/Python/2.7/bin"

# Add flutter to path
PATH="$PATH:$HOME/Development/Applications/flutter/bin"

# Add Haskell to path
source "$HOME/.ghcup/env"
